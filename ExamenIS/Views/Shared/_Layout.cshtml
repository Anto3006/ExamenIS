<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <div class="row">
                    <div class="col">
                        <img src="~/imagenes/rock.png" class="img-fluid" style="height:80px; margin-right:5px" />
                    </div>
                    <div class="col align-middle">
                        <h1 class="align-middle" style="margin-top:15px">Pizza Piedra</h1>
                    </div>
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav w-100 nav-fill">
                    <li class="nav-item">
                        <a class="nav-link active h1" href="/" >
                            Página Principal
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item h1">
                        <a class="nav-link" href="#">Menú</a>
                    </li>
                    <li class="nav-item" >
                        <a class="nav-link" href="#" >
                            <img src="~/imagenes/shopping-cart.png" class="img-fluid" style="height:60px; margin-right:5px" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstraJS")
    @RenderSection("scripts", required: false)
</body>
</html>
